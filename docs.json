{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Kappture",
  "colors": {
    "primary": "#e62177",
    "light": "#f073a3",
    "dark": "#b81d5f"
  },
  "styling": {
    "appearance": {
      "background": {
        "color": {
          "light": "#ffffff",
          "dark": "#15171C"
        }
      }
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "index"
            ]
          },
          {
            "group": "Management Portal",
            "pages": [
              "enterprise/overview",
              "enterprise/getting-started",
              "enterprise/authentication",
              "enterprise/navigation",
              {
                "group": "Admin",
                "pages": [
                  "enterprise/pages/admin/audit",
                  "enterprise/pages/admin/users",
                  "enterprise/pages/admin/user-roles",
                  "enterprise/pages/admin/restriction",
                  "enterprise/pages/admin/connected-account",
                  "enterprise/pages/admin/client-devices"
                ]
              },
              {
                "group": "Incentives",
                "pages": [
                  "enterprise/pages/incentives/overview",
                  "enterprise/pages/incentives/voucher",
                  "enterprise/pages/incentives/loyalty",
                  "enterprise/pages/incentives/reward",
                  "enterprise/pages/incentives/game"
                ]
              },
              {
                "group": "Member Management",
                "pages": [
                  "enterprise/pages/member/account",
                  "enterprise/pages/member/member-import",
                  "enterprise/pages/member/member",
                  "enterprise/pages/member/member-group",
                  "enterprise/pages/member/member-group-management",
                  "enterprise/pages/member/cost-centre"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "api-reference/api-bundled.yaml",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction"
            ]
          }
        ]
      },
      {
        "tab": "Release notes",
        "groups": [
          {
            "group": "Release notes",
            "pages": [
              "release-notes/index",
              "release-notes/management-portal",
              "release-notes/api",
              "release-notes/terminal"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "/"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  },
  "assistant": {
    "enabled": true
  }
}
